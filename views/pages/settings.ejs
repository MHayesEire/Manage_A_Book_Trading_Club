<body>
<div class="container">
          <h1> Update Profile</h1>
<div class="col-sm-11 col-sm-offset-1">
        <a href="/" class="btn btn-default"><span class="glyphicon glyphicon-home"></span> Home </a>
        <a href="/books" class="btn btn-default"><span class="glyphicon glyphicon-book"></span> View All Books </a>
        <a href="/acSettings" class="btn btn-default"><span class="glyphicon glyphicon-cog"></span> Update Accounts </a>  
        <a href="/mybooks" class="btn btn-default"><span class="glyphicon glyphicon-bookmark"></span> View My Books </a>        
        <a href="/logout" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-off"></span> Logout </a>  
        <br /> <br />
<div class="col-sm-6 col-sm-offset-3">
    <!-- Update Profile FORM -->
    <form action="/updateAC" method="post" onsubmit="return validateForm1()" id="form1">
        <div class="form-group">
            <label>City</label>
            <input type="text" class="form-control" id="city1" name="city" value="<%=city %>">
        </div>        
        <div class="form-group">
            <label>State</label>
            <input type="text" class="form-control" id="state1" name="state" value="<%=state %>">
        </div>
        <button type="submit" id="btn1changes" class="btn btn-success btn-lg"> Save Changes</button>
    </form><br />
<%if (error =="") { %>
<% }else{ %>
<h2><b style="color: red;"><%=error %></b></h2></li>
<% } %>
    <hr>
    <h1>Change Password</h1>
    <!-- Change Password FORM -->
    <form action="/ACpwUpdate" method="post" onsubmit="return validateForm2()">
        <div class="form-group">
            <label>Current Password</label>
            <input type="password" class="form-control" id="pw1" name="oldpw">
        </div>        
        <div class="form-group">
            <label>New Password</label>
            <input type="password" class="form-control" id="pw2" name="newpw">
        </div>
        <button type="submit" id="btn2changes" class="btn btn-success btn-lg"> Save Password Changes</button>
    </form>
    <hr>
</div>
